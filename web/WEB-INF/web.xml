<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>PessoaServlet</servlet-name>
        <servlet-class>br.com.senacrs.servlet.PessoaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>br.com.senacrs.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadPessoa</servlet-name>
        <jsp-file>/cadastro/cadPessoa.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editPessoa</servlet-name>
        <jsp-file>/edicao/editPessoa.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>visualizaPessoa</servlet-name>
        <jsp-file>/listagem/visualizaPessoa.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PessoaServlet</servlet-name>
        <url-pattern>/PessoaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadPessoa</servlet-name>
        <url-pattern>/cadPessoa</url-pattern>
        <url-pattern>/pessoaCad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editPessoa</servlet-name>
        <url-pattern>/editPessoa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>visualizaPessoa</servlet-name>
        <url-pattern>/visualizaPessoa</url-pattern>
        <url-pattern>/listaPessoa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
